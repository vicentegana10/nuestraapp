
<div class="mx-auto" style="width: 50%;">
  <%= form_for Message.new do |form| %>
    <div class="form-group field">
        <%= form.label :text, class: "form-label" %>
        <%= form.text_area :text, class: "form-control" %>
    </div>


    <div class="form-group field">
      <%= form.label :recipient_id, class: "form-label" %> Email
      <%= form.text_field :recipient_id, class: "form-control" %>
    </div>


    

    <div class="row mt-3 ml-0">
      <div class="form-group actions">
          <%= form.submit class: "btn btn-primary" %>
      </div>
    </div>

  <% end %>

  </div>
  <div class="row">
    <div class="col mt-3">
      <%= link_to 'Back', mailbox_index_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>